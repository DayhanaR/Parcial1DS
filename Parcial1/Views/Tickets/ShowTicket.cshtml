@model Parcial1.Data.Entities.Ticket
@{
    ViewData["Title"] = "ShowTicket";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<h1>Boleto</h1>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Document)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WasUsed)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Entrace)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateTime)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Document)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.WasUsed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Entrace.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.DateTime)
                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@model Parcial1.Models.FormatTicketViewModel


@{
    ViewData["Title"] = "ModifyTicket";
}

<h1>Modificar Boleta</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="ModifyTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="WasUsed" />
            <div div class="row">
                <div lass="col-md-6">
                    <div class="form-group">
                        <label asp-for="Document" class="control-label"></label>
                        <input asp-for="Document" class="form-control" />
                        <span asp-validation-for="Document" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EntranceId" class="control-label"></label>
                        <select asp-for="EntranceId" asp-items="Model.Entrances" class="form-control"></select>
                        <span asp-validation-for="EntranceId" class="text-danger"></span>

                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Actualizar" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

